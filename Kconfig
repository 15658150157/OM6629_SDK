################################################################################
## @File       Kconfig
## @Brief      SDK configuration
################################################################################

mainmenu "SDK Configuration"


#
# System
#
menu 'System'
config HARDWARE_VERSION
    int "Hardware version(A1:1; A2:2; A3:3, ...)"
    default 1

config TOOL_CHAIN_OPTIMIZATION_LEVEL
    int "Optimization Level(0:-O0, 1:-O1, 2:-O2, 3:-O3, 4:-Os, 5:-Of, 6:-Og)"
    range 0 6
    default 4

endmenu

#
# BSP
#
rsource "bsp/Kconfig"

#
# components
#
rsource "components/Kconfig"

#
# hal
#
rsource "hal/Kconfig"

#
# RTOS
#
rsource "rtos/Kconfig"
